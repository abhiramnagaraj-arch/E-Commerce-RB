<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Shopflow" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  </head>

  <body>

    <nav style="margin-bottom: 20px;">
      <%= link_to "Products", products_path %> |

      <% cart_count = session[:cart]&.values&.sum || 0 %>
      <%= link_to "View Cart (#{cart_count})", cart_path %> |

      <% if current_user %>
        Logged in as <%= current_user.email %> |
        <%= button_to "Logout", logout_path, method: :delete, style: "display:inline;" %>
      <% else %>
        <%= link_to "Login", login_path %> |
        <%= link_to "Sign Up", new_user_path %>
      <% end %>
      <% if current_user %>
  <%= link_to "My Orders", orders_path, class: "nav-link" %>
<% end %>
      <% if current_user&.admin? %>
        <%= link_to "Admin Panel", admin_products_path %>
      <% end %>
    
    </nav>

    <%= yield %>

  </body>
</html>

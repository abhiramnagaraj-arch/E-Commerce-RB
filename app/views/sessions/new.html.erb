<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do |form| %>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <br>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <br>

  <div>
    <%= form.submit "Login" %>
  </div>

<% end %>

<br>

<%= link_to "Sign Up", new_user_path %>

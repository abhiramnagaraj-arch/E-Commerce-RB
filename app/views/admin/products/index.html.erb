<h1>Admin Products</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td>
          <%= link_to "Edit", edit_admin_product_path(product) %> |
          <%= button_to "Delete",
                        admin_product_path(product),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add New Product", new_admin_product_path %>
